<openerp>
	<data>

		<record model="ir.ui.view" id="view_articulo_form">
			<field name="name">Articulo</field>
			<field name="model">articulo</field>
			<field name="arch" type="xml">
				<form string="Articulo" version="8.0">
					<sheet>
						<header>
							<group col="10">
								<field name='state' widget='statusbar'
									statusbar_visible='borrador,enviado,rechazado_en_revision,maquetando,rechazado_en_maquetacion,publicable,publicado'
									statusbar_colors='{"borrador":"blue","enviado":"yellow", "rechazado_en_revision":"red","maquetando":"orange"
								, "rechazado_en_maquetacion":"red","publicable":"green","publicado":"purple"}' />
							</group>
							<group col="10">								
								<button name="to_send" states="borrador" string="Enviar"
									colspan="1" icon="gtk-apply" />
								<button name="enviar" string="Reenviar" states="rechazado_en_revision,rechazado_en_maquetacion"
									type="object" icon="gtk-apply" />
							</group>
						</header>
						<group col="4">
							<field name="nombre" attrs="{'readonly':['|','|','|',('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')]}"></field>
							<field name="seccion_id" attrs="{'readonly':[('state','!=','borrador')]}"></field>
							<field name="autor" attrs="{'readonly':1}"/>
							<field name="fecha_maq" attrs="{'readonly':'1','invisible':['|','|','|','|',('state','=','borrador'),('state','=','enviado'),('state','=','rechazado_en_revision'),('state','=','maquetando'),('state','=','rechazado_en_maquetacion')]}"></field>
							<field name="tipo_articulo" attrs="{'readonly':['|','|','|',('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')]}"></field>
							<field name="tipo_autor" on_change="onchange_tipo_autor(tipo_autor,context)" attrs="{'readonly':['|','|','|',('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')]}" />
							<field name="mostrar_tipo_autor_interno" invisible='1'></field>
							<field name="tipo_autor_interno" attrs="{'invisible':[('mostrar_tipo_autor_interno','=', False)],'readonly':['|','|','|',('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')]}" on_change="onchange_tipo_autor_interno(tipo_autor_interno,context)"/>
							<field name="mostrar_asignatura" invisible='1'></field>
							<field name="asignatura" attrs="{'invisible':[('mostrar_asignatura','=', False)],'readonly':['|','|','|',('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')]}"></field>
							<field name="destacado" attrs="{'readonly':'1','invisible':['|','|','|','|','|',('state','=','borrador'),('state','=','enviado'),('state','=','rechazado_en_revision'),('state','=','maquetando'),('state','=','rechazado_en_maquetacion'),('state','=','publicable')]}" />
						</group>
						<group col="2">
							<field name="descripcion" attrs="{'readonly':['|','|','|',('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')]}"></field>
							<field name="palabras_clave" attrs="{'readonly':['|','|','|',('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')]}" />
							<field name="archivo" filename="filename"
								attrs="{'readonly':['|','|','|',('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')]}" />
							
							<field name="archivo_diff" filename="filenameDiff" attrs="{'invisible':['|','|','|','|','|',('state','=','borrador'),('state','=','rechazado_en_maquetacion'),('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')],
							'required':[('state','=','rechazado_en_revision')]}"></field>
							<field name="archivo_diff_m" filename="filenameDiff" attrs="{'invisible':['|','|','|','|','|',('state','=','borrador'),('state','=','rechazado_en_revision'),('state','=','enviado'),('state','=','maquetando'),('state','=','publicable'),('state','=','publicado')],
							'required':[('state','=','rechazado_en_maquetacion')]}"></field>

						</group>
						<notebook colspan="4">
							<page string="Revision" attrs="{'invisible':[('state','=','borrador')]}" >
								<group col="2">
									<field name="revision_observaciones" string="Observaciones" filename="filenameObv"/>
									<field name="revision_comentarios" string="Comentarios" />
								</group>
								<!-- <field name="revision_id" readonly="1"
									states="enviado,rechazado_en_revision,maquetando,rechazado_en_maquetacion,publicable" /> -->
							</page>
							<page string="Maquetacion" attrs="{'invisible':['|','|',('state','=','borrador'),('state','=','enviado'),('state','=','rechazado_en_revision')]}">
								<group col="2">
									<field name="maquetacion_observaciones" string="Observaciones" filename="filenameObv"/>
									<field name="maquetacion_comentarios" string="Comentarios" />
								</group>
							</page>
							<!-- <field name="maquetacion_id" readonly="1"
									states="enviado,rechazado_en_revision,maquetando,rechazado_en_maquetacion,publicable,publicado" /> -->
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_articulo_tree">
			<field name="name">Articulo</field>
			<field name="model">articulo</field>
			<field name="arch" type="xml">
				<tree string="Articulos">
					<field name="nombre"></field>
					<field name="tipo_articulo"></field>
					<field name="seccion_id"></field>
					<field name="archivo" filename="filename" />
					<field name="state" />
					<field name="premiado" />
				</tree>
			</field>
		</record>
		
		<!-- Action -->
		<record id="act_articulo" model="ir.actions.act_window">
			<field name="name">Articulos</field>
			<field name="res_model">articulo</field>
			<field name="view_id" ref="view_articulo_tree" />
			<field name="view_type">form</field>
			<field name="view_model">tree,form</field>
			<field name="domain">[('state', '!=', 'version_rechazada')]</field>
		</record>



		
		<menuitem name="Articulos" id="articulos_submenu" parent="moleqla_submenu_lateral_autor"
			sequence="80" action="act_articulo" />
	</data>
</openerp>